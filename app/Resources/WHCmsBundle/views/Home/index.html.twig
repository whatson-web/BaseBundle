{% extends "WHMainBundle::layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('front/css/home-old.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('front/css/home.css') }}"/>
{% endblock %}

{% block carousel %}

    {% if home.files is not empty %}

        <div id="myCarousel" class="carousel slide">

            <div class="carousel-inner">
                {% for file in home.files %}
                    <div class="item {% if loop.first %}active{% endif %}">
                        <img src="{{ file.url }}" alt="{{ file.alt }}"/>
                    </div>
                {% endfor %}
            </div>

            <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>

        </div>

    {% endif %}

{% endblock %}

{% block content %}

    <div class="container">

        <div class="contenu">

            <h1>{{ home.page.title }}</h1>

            {{ home.page.body | raw }}

        </div>

        {% if homePages is not empty %}

            <div class="liste-pages-home">

                {% for homePage in homePages %}

                    {% if loop.index % 3 == 1 %}
                        <div class="row-fluid">
                    {% endif %}

                    <div class="span4">

                        <div class="page">

                            <h3>
                                <a href="{{ path('wh_front_cms_page', {'url' : homePage.url}) }}">{{ homePage.name }}</a>
                            </h3>

                            {% if homePage.thumb %}
                                <div class="image">
                                    <a href="{{ path('wh_front_cms_page', {'url' : homePage.url}) }}">
                                        <img src="{{ homePage.thumb.url }}" alt="{{ homePage.thumb.alt }}"/>
                                    </a>
                                </div>
                            {% endif %}

                            <p>{{ homePage.resume }}</p>

                            <div class="plus">
                                <a href="{{ path('wh_front_cms_page', {'url' : homePage.url}) }}">Découvrir</a>
                            </div>

                        </div>

                    </div>

                    {% if loop.index % 3 == 0 or loop.last %}
                        </div>
                    {% endif %}

                {% endfor %}

            </div>

        {% endif %}

    </div>

    {% if homeProducts is not empty %}

        <section class="liste_produits_home">

            <div class="container">

                {% for article in homeProducts %}

                    {% if loop.index % 3 == 1 %}
                        <div class="row-fluid">
                    {% endif %}

                    <div class="span4">

                        <div class="produit">

                            <h3>
                                <a href="{{ path('app_catalogue_product', {'slug': article.product.slug, 'articleId' : article.id}) }}">{{ article.product.name }}</a>
                            </h3>
                            <h4>{{ article.product.subtitle }}</h4>

                            {% if article.product.thumb %}
                                <div class="image">
                                    {% if article.product.moinsCher %}
                                        <span>Le moins cher du web !</span>
                                    {% endif %}
                                    <a href="{{ path('app_catalogue_product', {'slug' : article.product.slug, 'articleId' : article.id}) }}">
                                        <img src="{{ article.product.thumb.url }}"
                                             alt="{{ article.product.thumb.alt }}"/>
                                    </a>
                                </div>
                            {% endif %}

                            <p class="prix">{{ article.price | number_format(2, ',', '') }}€</p>

                            <div class="plus">
                                <a href="{{ path('app_catalogue_product', {'slug' : article.product.slug, 'articleId' : article.id}) }}">Voir
                                    la fiche technique</a>
                            </div>

                        </div>

                    </div>

                    {% if loop.index % 3 == 0 or loop.last %}
                        </div>
                    {% endif %}

                {% endfor %}

            </div>

        </section>

    {% endif %}

    {% if newsPages is not empty %}

        <div class="container">

            <section class="liste-pages-guide">

                <h2>Installation, estimation de la consommation, revente à EDF...</h2>

                <h3>Vous ne savez pas par où commencer ?</h3>

                {% for page in newsPages %}

                    {% if loop.index % 4 == 1 %}
                        <div class="row-fluid">
                    {% endif %}

                    <div class="span3">

                        <div class="page">

                            <h3><a href="{{ path('wh_front_cms_page', {'url' : page.url}) }}">{{ page.name }}</a></h3>

                            {% if page.thumb %}
                                <div class="image">
                                    <a href="{{ path('wh_front_cms_page', {'url' : page.url}) }}">
                                        <img src="{{ page.thumb.url }}" alt="{{ page.thumb.alt }}"/>
                                    </a>
                                </div>
                            {% endif %}

                            <p>{{ page.resume }}</p>

                            <div class="plus">
                                <a href="{{ path('wh_front_cms_page', {'url' : page.url}) }}">Découvrir</a>
                            </div>

                        </div>

                    </div>

                    {% if loop.index % 4 == 0 or loop.last %}
                        </div>
                    {% endif %}

                {% endfor %}

            </section>

        </div>

    {% endif %}

    <div class="a-propos">

        <div class="container">

            {{ home.body | raw }}

        </div>

    </div>

{% endblock %}

{% block javascript %}

    <script type="text/javascript">

        $(window).ready(function () {

            $('#myCarousel').carousel({
                interval: 5000,
            });

        });

    </script>

{% endblock %}
