{% extends "WHMainBundle::layout.html.twig" %}

{% block content %}

    <div class="container">

        <div class="row-fluid">

            <div class="span4">

                {% if otherPosts is not empty %}

                    <nav class="menu-actualites">
                        {% spaceless %}
                            <ul>
                                {% for post in otherPosts %}
                                    <li><a href="{{ path('app_blog_post', {'slug': post.slug}) }}">{{ post.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endspaceless %}
                    </nav>

                {% endif %}

            </div>

            <div class="span8">

                <div class="contenu">

                    <h1>{{ post.title }}</h1>

                    {{ post.body | raw }}

                </div>

            </div>

        </div>

    </div>

{% endblock %}
